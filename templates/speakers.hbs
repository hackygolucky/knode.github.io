{{#base}}
  {{#wrap}}
    <h1>Speakers</h1>
    <!--<div>MAP PLACEHOLDER</div>--> 
    <section>
        <article>
            <!-- This is where the listings go. They will be sorted in alphabetical order by city.-->
            {{#cities}}
                <h3>{{city}}</h3>
                <!-- within each city directory, list the meetups in alphabetical order by group name-->
                <ul>
                {{#speakers}}
                  <li>
                    <img src="{{image}}"/>
                    <h5>{{name}}</h5>
                    <ul>
                      <li><img src="../images/twitter_icon.png"/> {{twitter}}</li>
                      <li><img src="../images/github_icon.png"/> {{github}}</li>
                    </ul>
                    <p>Preferred audience size: {{preferred_audience_size}}</p>
                    <p>Travel availability: {{travel_availability}}</p>
                    <h6>About me:</h6>
                    <div>{{{about_me}}}</div>
                  </li>
                {{/speakers}}
                </ul>
            {{/cities}}
        </article>
    </section>

  {{/wrap}}
{{/base}}
